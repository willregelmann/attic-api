# Railway Environment Variables Template for Laravel Backend

# Application
APP_NAME="Attic"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://${RAILWAY_PUBLIC_DOMAIN}

# Database (Railway provides these automatically)
DB_CONNECTION=pgsql
DB_HOST=$PGHOST
DB_PORT=$PGPORT
DB_DATABASE=$PGDATABASE
DB_USERNAME=$PGUSER
DB_PASSWORD=$PGPASSWORD

# Laravel Keys (generate with: php artisan key:generate)
APP_KEY=

# Sessions & Cache
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# Sanctum (for API authentication)
SANCTUM_STATEFUL_DOMAINS=${RAILWAY_PUBLIC_DOMAIN}
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none

# CORS
FRONTEND_URL=https://web-production-3ac54.up.railway.app

# GraphQL
LIGHTHOUSE_PLAYGROUND_ENABLED=false

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# AI Curator Settings
# Choose provider: 'anthropic' or 'openai'
AI_PROVIDER=anthropic

# Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229
# Other models: claude-3-sonnet-20240229, claude-3-haiku-20240307

# OpenAI (Alternative)
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4
# Optional: Use a different API endpoint (e.g., Azure OpenAI)
# OPENAI_API_URL=https://api.openai.com/v1